@model RazorLightDemo.Models.CreateConciergeItemEmailModel

<!--
    This is a Razor template for email rendering. It should not be compiled as C# code directly.
    If you are using RazorLight or similar, ensure this file is loaded as a template, not as a C# source file.
-->
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
</head>
<body style="font-family: Arial, sans-serif;">

    <h2 style="font-family: Arial, sans-serif;">New Concierge Item has been created for Member: @Model.MemberName</h2>

    <p style="font-family: Arial, sans-serif;">The following Concierge Item has been created:</p>

    <table style="border-collapse: collapse; width: 100%; margin-top: 20px; font-family: Arial, sans-serif;">
        <tr style="background-color: #f2f2f2;">
            <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Date Created</th>
            <td style="border: 1px solid #ddd; padding: 8px; text-align: left;">@Model.DateCreated.ToString("dd/MM/yyyy")</td>
        </tr>
        <tr>
            <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Client</th>
            <td style="border: 1px solid #ddd; padding: 8px; text-align: left;">@Model.ClientName</td>
        </tr>
        <tr style="background-color: #f9f9f9;">
            <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Programme</th>
            <td style="border: 1px solid #ddd; padding: 8px; text-align: left;">@Model.ProgrammeName</td>
        </tr>
        <tr>
            <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Concierge Item ID</th>
            <td style="border: 1px solid #ddd; padding: 8px; text-align: left;">
                <a href="@Model.ConciergeItemLink" style="color: #0066cc;">@Model.ConciergeItemId</a>
            </td>
        </tr>
        <tr style="background-color: #f9f9f9;">
            <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Summary ID</th>
            <td style="border: 1px solid #ddd; padding: 8px; text-align: left;">
                <a href="@Model.SummaryLink" style="color: #0066cc;">@Model.SummaryID</a>
            </td>
        </tr>
        <tr>
            <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Item Details</th>
            <td style="border: 1px solid #ddd; padding: 8px; text-align: left;">@Model.ConciergeItemDetails</td>
        </tr>
        <tr style="background-color: #f9f9f9;">
            <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Summary Notes</th>
            <td style="border: 1px solid #ddd; padding: 8px; text-align: left;">@Model.SummaryNotes</td>
        </tr>
    </table>

    <p style="margin-top: 40px; font-size: 12px; color: gray; text-align: center; font-family: Arial, sans-serif;">
        This is an automated notification. Please do not reply to this email.
    </p>

</body>
</html>
